{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "run": {
          "serviceId": "collab-board",
          "region": "us-east4"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "collab-board",
          "region": "us-east4"
        }
      }
    ]
  },
  "apphosting": {
    "appAdmin": true
  }
}
